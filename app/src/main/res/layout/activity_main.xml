<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >

            <ImageView
                android:id="@+id/activity_main_logo_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:src="@drawable/arte_quadro_cm_com_texto_ao_fundo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/activity_main_intro_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="16sp"
                android:text="@string/intro_text"
                android:gravity="center_horizontal"
                android:layout_below="@+id/activity_main_logo_picture"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

            <Button
                android:id="@+id/activity_main_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conhecer_series_btn"
                android:layout_below="@+id/activity_main_intro_text"
                android:layout_marginTop="48dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>